@import '../templates/star/star.wxss';
.container-text{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin:0px 20rpx 20rpx 20rpx;
}
.img-icon{
  width: 8rpx;
  height: 32rpx;
  vertical-align:middle;
  margin-top: -6rpx;
}
/*view-scroll 横向滚动*/
.container-scroll{
    display:flex;
    display: -webkit-flex;
    flex-direction: row;
    white-space: nowrap;
}
.scroll-view-item_X {
  display:inline-flex;
  flex-direction: column;
  align-items: center;
}
.scroll-img{
  width: 200rpx;
  height: 285rpx;
  margin: 0rpx 20rpx;
}
.text-title{
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width:200rpx;
}
.text-font{
  font-weight: bold;
}
.container-text{
  margin-top: 20rpx;
}
.header{
  background-color: #20A0FF;
  min-height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #FFFFFF;
  font-size: 32rpx;
}
.text-color{
  color: #20A0FF;
}
.sc-img{
  width: 150rpx;
  height: 150rpx;
}
.sc-img-con{
  display: flex;
  justify-content: center;
  align-items: center;
}